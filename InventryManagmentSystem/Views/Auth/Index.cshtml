
@model InventryManagmentSystem.user

@{ 
    Layout = null;
}

<!DoOCTYPE>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="container">
        <h4><strong>A<sup>LI</sup>Inventory Managment Portal</strong></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row offset-md-3" style="margin-top:5%">
            <div class="form-group col-lg-7">
                @Html.LabelFor(Model => Model.u_username, "Username", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.u_username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row offset-md-3">
        <div class="form-group col-lg-7">
            @Html.LabelFor(model => model.u_password, "Password", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
        </div>
        </div>
        <div class="row offset-md-3">
            <div class="form-group col-lg-7">
                <input type="submit" value="Login" class="btn btn-success btn-block" />

            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year A<sup>LI</sup> .I>T>Solutions</p>

        </footer>
    </div>
    }

</body>

</html>